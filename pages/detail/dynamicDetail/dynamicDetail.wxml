<view scroll-y style="height: 100%" class="bg-white margin-bottom">
  <view class="cu-card dynamic no-card">
    <view class="cu-item shadow">
      <!-- 头像、昵称、时间区 -->
      <view class="cu-list menu-avatar">
        <view class="cu-item" style="height: 130rpx;padding-top: 20rpx;">
          <view class="cu-avatar round lg" style="background-image:url({{bImg}});"></view>
          <view class="content flex-sub">
            <view>item.senderNickName</view>
            <view class="text-gray text-sm flex justify-between">item.sendTime</view>
          </view>
        </view>
      </view>
      <!-- 文字区 -->
      <view class="text-content" style="padding-left:146rpx;">item.content</view>
    </view>
  </view>
</view>
