.my-bg {
  position: fixed;
  top: 0;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 100%;
  background-size: 100% 100%;
  transform: scale(1.1);
  /* 放大1.2倍去除白边*/
  z-index: -1;
}

.cu-form-group .title {
  text-align: center;
  padding: 0;
  width: 100%;
  height: 100%;
}


.my-cur-avatar {
  width: 100rpx !important;
  height: 100rpx !important;
  border: 4rpx solid red;
}

.my-avatar {
  opacity: 0.7;
}


/* 呼吸灯 */
.my-breathe-circle {
  width: 20rpx;
  height: 20rpx;
  /* line-height: 40px; */
  border: 1px solid #2b92d4;
  border-radius: 50%;
  color: #fff;
  font-size: 20px;
  text-align: center;
  box-shadow: 0 1px 2px rgba(0, 0, 0, .3);
  overflow: hidden;
  background-image: -webkit-gradient(linear, left top, left bottom, from(#6cc3fe), to(#21a1d0));
  animation-timing-function: ease-in-out;
  animation-name: breathe;
  animation-duration: 2700ms;
  animation-iteration-count: infinite;
  animation-direction: alternate;
}

@keyframes breathe {
  0% {
    opacity: .2;
    box-shadow: 0 1px 2px rgba(255, 255, 255, 0.1);
  }

  100% {
    opacity: 1;
    border: 1px solid rgba(59, 235, 235, 1);
    box-shadow: 0 1px 30px rgba(59, 255, 255, 1);
  }
}

.my-circle {
  width: 20rpx;
  height: 20rpx;
  border-radius: 50%;
  color: #fff;
  font-size: 20px;
  text-align: center;
  border: 1px solid rgba(59, 235, 235, 1);
  box-shadow: 0 1px 30px rgba(59, 255, 255, 1);
  overflow: hidden;
  background-color: #6cc3fe;
}


/* 等待加载动画 */
.first-dot,
.second-dot,
.third-dot {
  width: 20rpx;
  height: 20rpx;
  background-color: white;
  border-radius: 50%;
}

.first-dot {
  animation: disappear 1s;
  animation-delay: 0s;
  animation-fill-mode: forwards;
}

.second-dot {
  animation: disappear 2s;
  animation-delay: 1s;
  animation-fill-mode: forwards;
}

.third-dot {
  animation: disappear 3s;
  animation-delay: 2s;
  animation-fill-mode: forwards;
}


@keyframes disappear {
  0% {
    background-color: white;
  }

  100% {
    background-color: transparent;
  }
}

.my-icon {
  font-size: 70rpx;
}

.my-text {
  font-size: 30rpx;
}

.my-height {
  height: 120rpx;
}

.my-text-lg{
  font-size:36rpx !important;
}


/* 取词线 */
.my-line{
  position: relative;
  z-index:100;
}
.my-center-line {
  position: absolute;
  height: 40rpx;
  border-bottom: 1px solid red;
  width: 100%
}

.my-left-dot {
  position: absolute;
  margin-top: 30rpx;
  height: 20rpx;
  width: 20rpx;
  border-radius: 50%;
  background-color: red;
}

.my-right-dot {
  position: absolute;
  margin-top: 30rpx;
  right: 0;
  height: 20rpx;
  width: 20rpx;
  border-radius: 50%;
  background-color: red;
}